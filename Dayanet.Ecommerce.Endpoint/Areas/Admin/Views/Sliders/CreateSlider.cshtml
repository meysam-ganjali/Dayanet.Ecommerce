
@{
    ViewData["Title"] = "ایجاد اسلایدر جدید";
}
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">اسلایدر</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
            </ol>
        </nav>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <form method="post" action="/Admin/Sliders/CreateSlider" enctype="multipart/form-data">
                    <div class="input-group mb-3">
                        <span class="input-group-text bg-light">عنوان اسلاید</span>
                        <input name="Title" type="text" class="form-control">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">مکان اسلایدر</span>
                        <select name="PossitionId" asp-items="@ViewBag.Possition" class="form-select">
                            <option value="null">--انتخاب کنید--</option>
                        </select>
                        <a onclick="ShowModalAddPossition()" class="input-group-text btn btn-info"><i class="bx bx-plus"></i></a>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text bg-light" id="basic-addon1">توضیحات</span>
                        <textarea class="form-control" name="Description"></textarea>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text bg-light">تصویر اسلاید</span>
                        <input name="Image" type="file" class="form-control">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text bg-light">لینک اسلاید</span>
                        <input name="Link" type="text" class="form-control">
                    </div>
                    <div class="row justify-content-around">
                        <button type="submit" class="btn btn-success d-inline"><i class="fa fa-check"></i>&nbsp;ثبت </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts
    {
    <link rel="stylesheet" href="~/lib/Sweetalert2/sweetalert2.min.css" />
    <script src="~/lib/Sweetalert2/sweetalert2.min.js"></script>
    <script>
        function ShowModalAddPossition() {
            $('#AddPossition').modal('show');
        }
        
    </script>
}
@section Modals
    {
    <div class="modal" id="AddPossition" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-secondary">
                    <h5 class="modal-title text-white">مکان جدید<span id="parent_title"></span></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="post" action="/Admin/Sliders/CreatePossition">
                        <input name="Id" type="hidden" id="editCatId" />
                        <div class="input-group mb-3">
                            <span class="input-group-text bg-light">نام مکان</span>
                            <input name="PossitionNameFA"  type="text" class="form-control" aria-label="Parent Category Title" aria-describedby="basic-addon1">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text bg-light">نام مکان انگلیسی</span>
                            <input name="ProssitionNameEN" type="text" class="form-control" aria-label="Parent Category Title" aria-describedby="basic-addon1">
                        </div>
                        <div class="row justify-content-around">
                            <button type="submit" class="btn btn-success "><i class="fa fa-check"></i>&nbsp;ثبت </button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-arrow-left"></i>&nbsp;برگشت</button>
                        </div>
                    </form>

                </div>

            </div>
        </div>
    </div>
}
